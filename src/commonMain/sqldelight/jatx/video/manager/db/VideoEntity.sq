CREATE TABLE IF NOT EXISTS videoEntity
(id INTEGER PRIMARY KEY AUTOINCREMENT,
filePath TEXT NOT NULL,
videoName TEXT NOT NULL,
playlistName TEXT NOT NULL,
lastModified INTEGER NOT NULL,
duration INTEGER NOT NULL,
comment TEXT NOT NULL
);
CREATE UNIQUE INDEX IF NOT EXISTS the_index ON videoEntity (filePath);

selectAll:
SELECT * FROM videoEntity ORDER BY (lastModified + id);

insertVideo:
INSERT OR IGNORE INTO videoEntity
(filePath, videoName, playlistName, lastModified, duration, comment)
VALUES
(?, ?, ?, ?, ?, ?);

updateVideo:
UPDATE videoEntity SET
videoName=?, comment=?
WHERE id=?;
